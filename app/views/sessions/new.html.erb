<div class= "container">
  <% if flash[:error] %>
    <h3 class = "center-align notice"><%= flash[:error] %></h3>
  <%end%>
  <div class= "row">
    <div class="col l4 offset-l4 s12">
      <h3>Log In</h3>

      <%= form_for @user, url: "/sessions", method: "post" do |f| %>
        <div>
          <%= f.text_field :email, placeholder: "Email" %>
        </div>
        <br>
        <div>
          <%= f.password_field :password, placeholder: "Password" %>
        </div>
        <br>
        <div id="logInButton"><%= f.submit "Submit", :class => "btn waves-effect waves-light" %></div>
      <% end %>
    </div>
  </div>
</div>
