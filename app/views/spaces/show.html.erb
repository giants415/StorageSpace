<h1> <%= @space.title %> </h1>
<%= @space.price %>
<%= @space.address %>
<%= @space.size %>
<%= @space.available %>
<%= @space.description %>
<%= @space.photo %>
<br>
<% if current_user %>
  <%= button_to "Rent this space", new_space_transaction_path(@space), method: "get", class: "waves-effect waves-light btn" %>

<% else %>
  <h5>
   <%= link_to "Log In", login_path %>
   or
   <%= link_to "Sign Up", new_user_path %>
   to rent this space
 </h5>
<% end %>
