
<div class="container">
  <div class="row">
    <div class="col l8 offset-l2 s12">

      <h1>Rental Agreement</h1>
      <h4><strong>Renter: </strong><%= current_user.name %></h4>
      <h4><strong>Owner: </strong><%= User.find_by_id(@space.user_id).name %></h4>

      <h5><strong>Space: </strong><%= @space.title %></h5>
      <ul>
        <li><strong>Address:  </strong><%= @space.street_address %></li>
        <li><strong>Price per month:  </strong><%= @space.price %></li>
        <li><strong>Square footage:  </strong><%= @space.size %></li>
        <li><strong>Availability:  </strong><%= @space.available ? "Available" : "Not Available" %></li>
      </ul>

      <%= form_for [@space, @transaction] do |f| %>
        <div class="row">
          <div class="col s12 m2 l2">
            <h6><strong>Term: </strong></h6>
          </div>
          <div class="col s12 m5 l2">
            <p class="termDateTitle">Start date: </p>
          </div>
          <div class="col s12 m5 l3">
            <span class="label label-default"></span><%= f.date_field :start_date, placeholder: "Start Date" %>
          </div>
          <div class="col s12 m6 l2">
            <p class="termDateTitle">End date: </p>
          </div>
          <div class="col s12 m6 l3">
            <span class="label label-default"></span><%= f.date_field :end_date, placeholder: "End Date" %>
          </div>
          <br>
          <div>
            <span class="label label-default"></span><%= f.hidden_field :space_id, value: @space.id %>
          </div>
          <div>
            <span class="label label-default"></span><%= f.hidden_field :user_id, value: current_user.id %>
          </div>
          <div>
            <span class="label label-default"></span><%= f.hidden_field :stripe_id, value: "123456789" %>
          </div>
          <br>
          <div class="userSubmitButton"><%= f.submit "Confirm and move to payment", class: "waves-effect waves-light btn" %></div>
          <% end %>
        </div>
    </div>
  </div>
</div>
