<div class = "container">
  <h1 class = "center-align"> <%= @space.title %> </h1>
  <div class="carousel carousel-slider single_listing">
    <a class="carousel-item" href="#one!"><img src="<%= @space.photo %>"></a>
    <a class="carousel-item" href="#two!"><img src="<%= @space.photo %>"></a>
    <a class="carousel-item" href="#three!"><img src="<%= @space.photo %>"></a>
    <a class="carousel-item" href="#four!"><img src="<%= @space.photo %>"></a>
    <%= image_tag @space.photo1.url(:medium) %>
    <%= image_tag @space.photo2.url(:medium) %>
  </div>
  <div class = "row">
    <p>Price: $<%= @space.price %></p>
    <div class="row">
      <div class="col s4">
        <p><%= @space.street_address %></p>
        <p><%= @space.city %></p>
        <p><%= @space.state %></p>
        <p><%= @space.zip_code %></p>
      </div>
    </div>
    <div class = "row">
      <p>Space Available: <%= @space.size %> sq. ft.</p>
      <p>About This Space</p>
      <hr>
      <p><%= @space.description %></p>

      <div class="row">
        <div class="col l2">
          <table>
            <tr>
              <td><%= image_tag 'empty_star.png', :class => "star_rating", :id => "star1" %></td>
              <td><%= image_tag 'empty_star.png', :class => "star_rating", :id => "star2" %></td>
              <td><%= image_tag 'empty_star.png', :class => "star_rating", :id => "star3" %></td>
              <td><%= image_tag 'empty_star.png', :class => "star_rating", :id => "star4" %></td>
              <td><%= image_tag 'empty_star.png', :class => "star_rating", :id => "star5" %></td>
            </tr>
          </table>
        </div>
      </div>
    </div>
    <% if current_user %>
      <%= button_to "Rent this space", new_space_transaction_path(@space), method: "get", class: "waves-effect waves-light btn" %>

    <% else %>
      <h5>
       <%= link_to "Log In", login_path %>
       or
       <%= link_to "Sign Up", new_user_path %>
       to rent this space
     </h5>
    <% end %>
  </div>
</div>
